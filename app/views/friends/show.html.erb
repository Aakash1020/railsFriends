  <div>
    <div class="card  shadow-lg p-3 mb-5 bg-body rounded" style="width: 60%">
      <div class="card-header">
        <h1 class="display-4">
          <%= @friend.first_name %>
          <%= @friend.last_name %>
        </h1>
      </div>
      <div class="card-body text-success">
        <p class="container"> 
          <ul>
            <li><%= @friend.email %></li>
            <li><%= @friend.phone %></li>
            <li><%= @friend.twitter %></li>
          </ul>
        </p>
        <br>
        <p class="lead">
          <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-outline-dark" %>
          <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
          <%= link_to 'Delete', friend_path, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %>
        </p><br>
      </div>
    </div>
  </div>